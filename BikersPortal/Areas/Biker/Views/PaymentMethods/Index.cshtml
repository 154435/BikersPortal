@model IEnumerable<BikersPortal.Models.PaymentMethod>

@{
    ViewData["Title"] = "Index";
}


<body style="background-image:url(https://cdna.artstation.com/p/assets/images/images/047/437/968/large/pixoartist-project-1-18-5.jpg?1647578559);">
<h1>PaymentMethods</h1>
 <div class="btn btn-dark">
    <a asp-action="Create">Create New</a>
 </div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaymentMethodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MethodEnabled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MethodEnabled)
            </td>
            <td>
               <div class="btn btn-dark">
                      <a asp-action="Edit" asp-route-id="@item.PaymentMethodId">Edit</a> |
               </div>
               <div class="btn btn-dark">
                      <a asp-action="Details" asp-route-id="@item.PaymentMethodId">Details</a> |
               </div>
               <div class="btn btn-dark">
                      <a asp-action="Delete" asp-route-id="@item.PaymentMethodId">Delete</a>
               </div>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
