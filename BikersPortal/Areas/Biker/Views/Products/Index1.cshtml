@model IEnumerable<BikersPortal.Models.Product>

@{
    ViewData["Title"] = "Index1";
}

<h1>Index</h1>

<div class="btn btn-dark">
    <a asp-area="Biker" asp-controller="Orders" asp-action="Create"> Proceed to Checkout  </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Available)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductType.ProductTypes)
            </td>
                
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                    <img class="card-img-top" src="@item.ImgUrl" style="width:16rem;height:17rem;">
            </td>
            <td>
               @* <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> *@
                <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> 
               @* <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
<div class="btn btn-dark">
    <a asp-area="Biker" asp-controller="Orders" asp-action="Create"> Proceed to Checkout  </a>
</div>